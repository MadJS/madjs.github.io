// http://css-tricks.com/inheriting-box-sizing-probably-slightly-better-best-practice/
*,
*:before,
*:after
  box-sizing inherit
  margin 0
  padding 0

html
  box-sizing border-box
  font-family "proxima-nova"
  font-size 100%

body
  color #222
    background radial-gradient(#EEE, #AAA)

h2
  font-size 2em
  padding-bottom 0.5em
  font-weight 700
  margin 0 0 0.8em 0
  border-bottom 2px solid #888

h3
  font-size 1.6em
  font-weight 400
  margin 0 0 0.3em 0

p
  font-size 1.2em
  font-weight 300
  line-height 1.618em
  margin 0 0 14px 0

a
  color inherit
  font-weight 400

b
  font-weight inherit

hr
  color #222
  border 2px solid #222

header
  background RGBA(68, 187, 221, 1)

section
  margin-bottom 1em

footer
  text-align center
  padding 2em

.linear
  width 100%
  padding 0
  background linear-gradient(180deg, RGBA(68, 187, 221, 1), RGBA(23, 136, 199, 1))

.radial
  width 100%
  background radial-gradient(RGBA(68, 187, 221, 1) 10%, RGBA(23, 136, 199, 0.1))

.about
  color RGBA(255, 255, 255, 0.9)
  font-weight 300
  background RGBA(0, 0, 0, 0.2)

.logo-wrapper
  text-align center

.logo
  max-width 25em
  width 70%
  margin-bottom 2em

.container
  max-width 70em
  padding 2em
  margin auto
  overflow hidden

.date
  font-size 0.8em

.event
  margin-bottom 2em

.event:last-of-type
  margin-bottom 0

.event-description
  font-size 0.8em

.event-details
  margin-left 1em

section
  .container
    background RGBA(255, 255, 255, 0.7)

.sponsors
  .col-1-3
    text-align center
    padding-right 0

.picture
  display block
  width 100%

.sponsor-logo
  margin-bottom 2em

.button-wrapper
  text-align center

.button
  display inline-block
  text-decoration none
  margin 1em 0 0 0
  padding 0.5em
  background-color #F9DC3C
  box-shadow 0px 3px 0px rgba(0,0,0,0.3)
  font-size 1.6em
  font-weight 700
  color #2E2E2B
  transition all 0.1s ease-in-out

.button:hover
  background-color #2E2E2B
  color #F9DC3C

.grid
  &:after
    content ""
    display table
    clear both

  [class*='col-']
    float left
    padding-right 1em

  [class*='col-']:last-of-type
    padding-right 0

  .col-2-3
    width 66.66%

  .col-3-4
    width 75%

  .col-1-3
    width 33.33%

  .col-1-2
    width 50%

  .col-1-4
    width 25%

  .col-1-8
    width 12.5%

@media all and (max-width: 800px)
  .container
    padding 1em
  h2
    font-size 1.5em
  h3
    font-size 1.4em
  p
    font-size 1em

@media all and (max-width: 700px)
  .grid
    [class*='col-']
      float none
      width 100%
      padding 0
  .button
    margin-bottom 1em

@media all and (max-width: 500px)
  .container
    padding 0.5em
  .logo-wrapper
    margin-top 1em
  h2
    font-size 1.2em
  h3
    font-size 1.1em
